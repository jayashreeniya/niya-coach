{
  "name": "framework",
  "version": "6.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "compile": "tsc -b --incremental",
    "test": "jest --verbose --coverage",
    "lint": "tsc && eslint 'src/**/*.{ts,tsx}' --fix",
    "sonar": "yarn lint; jest --verbose --coverage; sonar-scanner"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier-eslint --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "3.2.0",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "babel-eslint": "10.0.3",
    "babel-jest": "26.6.3",
    "enzyme-adapter-react-16": "1.15.7",
    "eslint": "8.57.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "8.10.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-jest": "26.9.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.34.1",
    "eslint-plugin-react-native": "4.1.0",
    "jest-enzyme": "7.1.2",
    "lint-staged": "10.0.7",
    "prettier-eslint-cli": "6.0.1",
    "ts-jest": "25.5.1"
  },
  "dependencies": {
    "@react-native-community/async-storage-backend-web": "2.0.0-rc.0",
    "react": "18.2.0",
    "react-native": "0.65.3"
  },
  "jestSonar": {
    "reportPath": "reports",
    "reportFile": "test-reporter.xml",
    "indent": 4
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "__tests__/tsconfig.base.json"
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/node_modules/jest-enzyme/lib/index.js"
    ],
    "testResultsProcessor": "jest-sonar-reporter",
    "setupFiles": [
      "<rootDir>/test-setup.js"
    ],
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "<rootDir>/coverage/"
    ],
    "cacheDirectory": ".jest/cache",
    "collectCoverageFrom": [
      "!babel.config.js",
      "!node_modules/**/*",
      "!build/**",
      "!node_modules/**/**/*",
      "!coverage/**/*"
    ]
  }
}