gem 'bx_block_profile', '0.0.8'
# gem 'bx_block_profile_bio', '0.1.6'  # Commented out - requires Rails < 6.1.A, conflicts with Rails 6.1.7.6
gem 'bx_block_chat', '0.0.13'
