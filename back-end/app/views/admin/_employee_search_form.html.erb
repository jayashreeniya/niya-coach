<%= form_tag admin_company_path(object), method: :get, class: "search-form" do %>
  <div class="field">
    <%= label_tag "employee_name", "Search Employees by Name" %>
    <%= text_field_tag "employee_name", params[:employee_name], class: "search-input" %>
  </div>
  <%= submit_tag "Search", class: "search-button" %>
<% end %>